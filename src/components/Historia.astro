---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { Coffee } from "@lucide/astro";

interface Hito {
  anio: string;
  titulo: string;
  texto: string;
}

interface Props {
  hitos: Hito[];
  banner?: ImageMetadata | string;
  fact?: string;
}

const { hitos = [], banner, fact } = Astro.props as Props;
---

<section id="historia" class="py-24">
  <div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="font-heading text-4xl lg:text-5xl font-bold text-base-content">
        Nuestra Historia
      </h2>
      <p class="mt-3 text-base-content/60 max-w-2xl mx-auto">
        Un grupo de estudiantes que cree en el poder del software libre para transformar la educación y la tecnología.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 items-start">
      <!-- Bloque izquierda -->
      <div class="rounded-xl border border-base-content/10 bg-base-100/40 backdrop-blur-sm p-6">
        {banner && (
          <div class="rounded-lg overflow-hidden border border-base-content/10">
            {typeof banner === "string" ? (
              <img src={banner} alt="Banner" class="w-full h-auto" />
            ) : (
              <Image src={banner} alt="Banner" class="w-full h-auto" format="webp" quality={90} />
            )}
          </div>
        )}

        <div class="mt-5 space-y-4 text-sm text-base-content/70 leading-relaxed">
          <slot />
        </div>

        {fact && (
          <div class="mt-6 flex items-center gap-3 p-4 rounded-lg border border-primary/20 bg-primary/10">
            <Coffee size={18} class="text-primary" />
            <span class="text-sm text-base-content/80">{fact}</span>
          </div>
        )}
      </div>

      <!-- Timeline derecha -->
      <div class="relative pl-6">
        <div class="absolute left-2 top-0 bottom-0 w-px bg-base-content/10"></div>

        {hitos.map((h, idx) => (
          <div class={`relative ${idx === hitos.length - 1 ? "" : "pb-8"}`}>
            <div class="absolute left-[-2px] top-1.5 w-3 h-3 rounded-full bg-primary"></div>

            <time class="font-mono italic text-primary font-bold text-sm">{h.anio}</time>
            <div class="mt-1 font-heading font-bold text-base-content">{h.titulo}</div>
            <p class="mt-1 text-sm text-base-content/70 leading-relaxed">{h.texto}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
